<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:padding="15dip" >

    <Button
        android:id="@+id/sms_btn_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:background="@drawable/comon_report_normal"
        android:gravity="center"
        android:text="举报"
        android:textColor="@android:color/white" />

    <RelativeLayout
        android:id="@+id/sms_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/sms_btn_report"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/sms_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:textColor="#3D4246"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/sms_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sms_phone_number"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="#868686"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/sms_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/sms_content"
            android:layout_alignParentRight="true"
            android:textColor="#ADADAD"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/sms_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/sms_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/sms_phone_number"
            android:textColor="#FD7F06"
            android:textSize="14sp" />
    </RelativeLayout>

</RelativeLayout>
